{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./types",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "strict": true,
    "target": "ES2020"
  },
  "exclude": [
    "node_modules",
    "dist",
    ".eslintrc.js",
  ],
  "include": [
    "src/**/*.ts"
  ],
  "ts-node": {
    "files": true,
    "transpileOnly": true
  }
}